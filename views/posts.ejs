<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="path/to/font-awesome/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <title>POSTS</title>
</head>
<body>
    <div style="display: flex;flex-wrap: wrap; width: 100%;height: 100%; gap: 20px;">
          
          <% posts.forEach(function(post) { %>
           <div class="postsDisplayer">
                <div style="display: flex; justify-content: start;align-items:
                 center; gap:10px;margin-left: 30px; width: 100%; height: 15%;">
                   <img id="profileImg" src="<%= post.profile_img %>" alt="">  
                   <div style="display: flex; flex-direction: column;justify-content:start;  align-items: center;">
                    <h5 style="margin-top: -10px;" ><%= post.name %></h5>  
                    <a style="margin-top: -20px;" href="/api/users/<%= post.user_id %>"><%= post.email %></a> 
                 </div>  
    
                </div>
                <div style="display: flex;align-items: center;justify-content: center;width: 100%; height: 75%;">
                   <img id="post" src="<%= post.image_url %>" alt="">
                </div>
                <div style="display: flex;justify-content: space-evenly; align-items: center;
                   width: 100%;height: 10%;">
                    <button style="background-color: transparent; border: none;cursor: pointer;" > <i  class="fa fa-thumbs-up"> <%= post.likes_count %></i></button>
                    <button ><i class="fa fa-chat-dots"></i> Comments</button>
                    <button ><i class="fa fa-share"></i> Share</button>
                </div>
           </div>
          <% }); %>
    </div>


    <style>
          .postsDisplayer {
            display:flex;
            flex-direction:column;
            width: 18%; 
            height: 350px;align-items:center;
            justify-content:center; 
            background-color: rgb(105, 151, 231);
        }
    a {
        font-size: 15px;
    }
    #profileImg{
      width: 50px;
      height: 50px;
      border-radius: 50%;
      object-fit: fill;
    }
    #post  {
     width: 90%;
     height: 100%;
     object-fit: cover;
     border-radius: 10px;   
    }
    @media screen and (max-width: 1450px) {
        .postsDisplayer {
           
            min-width: 25%; 
            
           
      }    
}
@media screen and (max-width: 1200px) {
        .postsDisplayer {
            
            min-width: 30%; 
            
           
      }    
}
@media screen and (max-width: 900px) {
        .postsDisplayer {
           
            min-width: 45%; 
          
           
      } 
    }
  
    @media screen and (max-width:  700px) {
        .postsDisplayer {
           
            min-width: 100%; 
        
           
      } 
    }   

    </style>
</body>
</html>